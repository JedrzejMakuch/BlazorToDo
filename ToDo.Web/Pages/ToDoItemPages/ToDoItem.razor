@page "/"
@inherits ToDoItemBase

@if(ToDoItemDtos == null)
{
    <div class="vh-100 d-flex justify-content-center align-items-center">
        <div class="spinner-border text-success" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
}
else
{
    var toDoItemsCount = ToDoItemDtos.Count();
    <div class="card">
        <div class="card-header justify-content-between">
            <h3>
                ToDo Items
            </h3>
            <a href="/AddToDoItem" class="btn btn-primary">New ToDo</a>
        </div>
        <div class="card-body">
            @if (toDoItemsCount > 0)
            {
                    <DisplayToDoItems ToDoItemDtos="@ToDoItemDtos" />
            }
        </div>
    </div>
}

