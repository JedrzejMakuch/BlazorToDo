@page "/"
@inherits ToDoItemBase

@if(ToDoItemDtos == null)
{
    <div class="vh-100 d-flex justify-content-center align-items-center">
        <div class="spinner-border text-success" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
}
else
{
    var toDoItemsCount = ToDoItemDtos.Count();
    
    <div class="">
        <div class="d-flex justify-content-between">
            <h3>
                ToDo Items
            </h3>
            <a href="/AddToDoItem" class="btn btn-primary m-2">New ToDo</a>
        </div>
        <div class="">
            @if (toDoItemsCount > 0)
            {
                    <DisplayToDoItems ToDoItemDtos="@ToDoItemDtos" />
            }
        </div>
    </div>
}

