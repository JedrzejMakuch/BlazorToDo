@page "/EditToDoItem/{Id:int}"
@inherits EditToDoItemBase

<div class="card">
    <div class="card-header">
        <h3>Edit TODO Item</h3>
    </div>
    <div class="card-body d-flex flex-column gap-3">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" placeholder="Name" id="name" @bind="name" />
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <input id="description" class="form-control" placeholder="Description" @bind="description" />
        </div>
    </div>
    <div class="card-footer">
        <button class="btn btn-primary" @onclick="SaveToDo">Save</button>
        <a class="btn btn-secondary" href="/">Back</a>
    </div>
</div>
