@page "/ToDoItemDetails/{Id:int}"
@using ToDo.Web.Pages.ToDoItemPages.Modals

@inherits ToDoItemDetailsBase

@if(ToDoItemDto == null && ErrorMessage == null)
{
    <div class="vh-100 d-flex justify-content-center align-items-center">
        <div class="spinner-border text-success" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
}
else if(ErrorMessage != null)
{
    <h3>@ErrorMessage</h3>
}
else
{
    <div class="conatiner flex-column d-flex gap-2">
        <div class="">
            <h3>Details</h3>
        </div>
        <div class="">
            <div class="card is-collapsable mt-3">
                <div class="card-header">
                    <div class="card-collapse-bar">
                        <span class="card-title">@ToDoItemDto.Name</span>
                    </div>
                </div>
                <div class="card-body">
                    <div class="card-body-wrapper">
                        @ToDoItemDto.Description
                    </div>
                </div>
            </div>
        </div>
        <div class="">
            <a href="EditToDoItem/@Id" class="btn btn-secondary">Edit ToDo</a>
            <a href="#" class="btn btn-success">Back</a>
            <button class="btn btn-danger" @onclick="ShowModal">Delete</button>
        </div>
    </div>
}

@if (showModal)
{
        <div class="modal" tabindex="-1" style="display: block;">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Confirmation</h5>
                        <button type="button" class="btn btn-outline-secondary close" @onclick="HideModal">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p>Are you sure you want to delete?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="HideModal">Cancel</button>
                    <button type="button" class="btn btn-danger" @onclick="DeleteToDo">Delete</button>
                    </div>
                </div>
            </div>
        </div>
}

@code {
    private bool showModal = false;

    private void ShowModal()
    {
        showModal = true;
    }

    private void HideModal()
    {
        showModal = false;
    }
}